{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["ES2021"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
